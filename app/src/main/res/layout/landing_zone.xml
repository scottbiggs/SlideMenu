<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for the Left landing zone area.
-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/lz_ll"
    android:layout_gravity="center"
    android:gravity="center"
    tools:ignore="RtlHardcoded"
    >

    <TextView
        android:id="@+id/lz_orig_tv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        tools:text="t-main"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:background="@drawable/circle_border"
        />

    <TextView
        android:id="@+id/lz_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/lz_orig_tv"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_border"
        android:layout_marginBottom="12dp"
        android:textSize="24sp"
        android:padding="12dp"
        android:text="t-left"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/lz_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/lz_orig_tv"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_border"
        android:layout_marginBottom="12dp"
        android:textSize="24sp"
        android:padding="12dp"
        android:text="t-right"
        android:visibility="gone"
        />

</RelativeLayout>